extends partials/_layout

block body

	#content-about.fold.fold-about(role="main")
		.fold__content
			.fold-about__body
				p
					| I'm
					span.highlight.no-right Marais Rossouw
					| , a
					span.highlight passionate
					| web
					span.highlight application developer
					| with over
					span.highlight seven years
					| experience.

				p I am based on the
					span.highlight.no-right Gold Coast
					| , Australia working as an software developer in the
					span.highlight.no-right insurance industry
					| .

				.fold-about__social
					h4 Get to know me:
					include partials/_social

				.fold-about__last-fm
					.fold-about__last-fm__body
						#last-fm.last-fm(role="banner")

	#content-experience.fold.fold-experience
		.fold__content
			.experience
				h2.offset-heading Experience
				ul
					for job in FRESH.employment.history
						li.experience__item
							article
								header
									h4=job.position

								p.experience__company=job.employer
								.experience__time
									+timeDif([job.start, job.end || 0])

								p.experience__descr=job.summary

								ul.experience__tags
									for tag in job.keywords
										li.experience__tags__tag=tag


	#content-skills.fold.fold-skills
		.fold__content
			.fold-skills__body
				h2.offset-heading Skills
				ul.legend
					for item in _SKILLS.legend
						li(class="legend__item legend__item--" + item.level, level=item.level)=item.label

				ul.skills
					for skill in _SKILLS.list
						li(class="skills__item skills__item--" + skill.css, level=skill.css)
							small=skill.zone
							| #{skill.skill}
