extends ./_layout

mixin timeMix(format, time)
	time(datetime=moment.tz(time, LOC).format()) #{moment.tz(time, LOC).format(format)}

mixin timeDif(range)
	+timeMix("MMMM YYYY", range[0])
	| -
	if range[1]
		+timeMix("MMMM YYYY", range[1])
	else
		time present

block body

	.fold.fold--no-bg
		.fold__intro
			.fold__intro__wrapper
				h1 Marais
					span .
				p An experienced&nbsp;
					span.pop caffeine consumer
					| !
				blockquote {Try printing me}

	.fold
		.fold__content
			.sway
				ul
					li.sway--right
						figure
							figcaption
								h2.offset-heading About
								p I'm Marais Rossouw, a creative and application programmer from Australia. With over 9 years experience in the design space from every technical angle

							.handsome
								img(src="img/handsome.jpg")

	.fold
		.fold__content
			.experience
				h2.offset-heading Experience
				ul
					li.experience__item
						article
							header
								h4 Wordpress Developer
								.experience__time
									+timeDif(['2012-01-01', '2012-09-01'])
							main
								p.experience__descr Began my career as a PSD to Wordpress theme developer.
								p.experience__company Smart-SEO

					li.experience__item
						article
							header
								h4 Software Engineer
								.experience__time
									+timeDif(['2013-03-01', '2014-01-01'])
							main
								p.experience__descr Began my career as a PSD to Wordpress theme developer.
								p.experience__company Vuly Trampolines

					li.experience__item
						article
							header
								h4 Technical Director
