mixin icon(label, which)
	svg(viewbox='0 0 1024 1024', xmlns:xlink="http://www.w3.org/1999/xlink")
		title #{label}
		use(xlink:href="#icon__" + which)

mixin timeMix(format, time)
	time.time(datetime=moment.tz(time, LOC).format()) #{moment.tz(time, LOC).format(format)}

mixin timeDif(range)
	+timeMix("MMMM YYYY", range[0])
	| -
	if range[1]
		+timeMix("MMMM YYYY", range[1])
	else
		span.time present
