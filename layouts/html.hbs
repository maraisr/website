<!DOCTYPE html>
<html lang={{ $site.lang }}>

<head>
	{{#var descr = $utils.truncate($page.summary || $site.description, 165) }}
	{{#var title = $page.title ? ($site.title + ' | ' + $page.title) : $site.title }}

	<meta charset="utf-8">
	<title>{{ title }}</title>
	<meta http-equiv="cleartype" content="on" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="mobile-web-app-capable" content="yes" />

	<meta name="application-name" content="{{ title }}" />
	<meta name="msapplication-tap-highlight" content="no" />
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta name="apple-mobile-web-app-title" content="{{ title }}" />
	<meta name="apple-mobile-web-app-status-bar-style" content="black" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<meta name="description" content="{{ descr }}" />
	<meta name="twitter:card" content="summary">
	<meta name="twitter:creator" content="@slightlycode" />

	{{#style src="style.css" output="s.css" inline=true }}

	{{ $page.styles }}

	{{ $page.scripts }}

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class='container'>
	<header>
		<div>
			<a href='/' class='logo'>
				marais<span class='cursor-blink'></span>
			</a>
		</div>
		<nav>
			<ul>
				<li><a href='/til'><svg><title>today i learned</title><use xlink:href="#icon__coffee"/></svg></a></li>
				<li><a href='https://github.com/maraisr' target="_blank"><svg><title>My GitHub</title><use xlink:href="#icon__github"/></svg></a></li>
				<li><a href='https://twitter.com/slightlycode' target="_blank"><svg><title>Follow me on twitter @slightlycode</title><use xlink:href="#icon__twitter"/></svg></a></li>
				<li><a href='mailto:me@marais.dev'><svg><title>Email me at me@marais.dev</title><use xlink:href="#icon__email"/></svg></a></li>
			</ul>
		</div>
	</header>

	<main>
		{{{ $page.content }}}
	</main>

	{{#footer}}

	{{#schema.org}}

	<svg style="display:none;visibility:hidden;">
		<symbol id="icon__github" viewBox="0 0 24 24">
			<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
		</symbol>
		<symbol id="icon__twitter" viewBox="0 0 24 24">
			<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
		</symbol>
		<symbol id="icon__email" viewBox="0 0 24 24">
			<g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="12" cy="12" r="4"></circle><path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path>
			</g>
		</symbol>
		<symbol id="icon__coffee" viewBox="0 0 24 24">
			<g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line>
			</g>
		</symbol>
	</svg>

	<script defer data-domain="marais.io" src="https://plausible.io/js/plausible.js"></script>
</body>

</html>
